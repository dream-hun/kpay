{
  "name": "kpay/laravel-kpay",
  "description": "Laravel 12 package for integrating with the K-Pay payment gateway.",
  "keywords": [
    "kpay",
    "k-pay",
    "laravel",
    "payments",
    "momo",
    "visa",
    "mastercard"
  ],
  "license": "MIT",
  "type": "library",
  "require": {
    "php": "^8.2",
    "illuminate/http": "^12.0",
    "illuminate/routing": "^12.0",
    "illuminate/support": "^12.0"
  },
  "require-dev": {
    "orchestra/testbench": "^10.0",
    "pestphp/pest": "^3.0",
    "laravel/pint": "^1.26",
    "rector/rector": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "KPay\\LaravelKPay\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KPay\\LaravelKPay\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "KPay\\LaravelKPay\\KPayServiceProvider"
      ],
      "aliases": {
        "KPay": "KPay\\LaravelKPay\\Facades\\KPay"
      }
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test": "vendor/bin/pest"
  }
}
